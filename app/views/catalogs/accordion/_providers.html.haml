- providers.select{ |prov| prov.is_available != false }.each do |p|
  - locked  = locked_ids.include?(p.id)
  - url     = locked ? locked_organization_catalogs_path(organization_id: p.id, shard: shard_param, srid: service_request.try(:id)) : update_description_catalogs_path(organization_id: p.id, shard: shard_param, srid: service_request.try(:id))

  .card.provider{ id: "provider#{shard_name}#{p.id}" }
    .card-header.p-0{ id: "provider#{shard_name}#{p.id}Header" }
      %button.provider-link.org-link.btn.btn-block.collapsed{ class: [css_class(p), locked ? 'locked' : ''], type: 'button', data: { toggle: 'collapse', target: "#provider#{shard_name}#{p.id}Collapse", url: url }, aria: { expanded: 'true', controls: "provider#{shard_name}#{p.id}Collapse" } }
        %h6.d-flex.align-items-start.mb-0
          = organization_name_display(p, locked, p.programs.any?)
    .collapse{ id: "provider#{shard_name}#{p.id}Collapse", data: { parent: "#institution#{shard_name}#{i.id}Collapse" }, aria: { labelledby: "provider#{shard_name}#{p.id}Header" } }
      .card-body.p-0
        = render 'catalogs/accordion/programs', service_request: service_request, programs: p.programs, locked_ids: locked_ids, shard_param: shard_param
